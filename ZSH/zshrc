export PATH=$HOME/.sf_bin:/usr/local/bin:$PATH

export ZSH=/Users/sfzhou/.oh-my-zsh
ZSH_THEME="agnoster"
COMPLETION_WAITING_DOTS="true"
HIST_STAMPS="yyyy-mm-dd"
plugins=(git textmate)

source $ZSH/oh-my-zsh.sh
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# ssh
export SSH_KEY_PATH="~/.ssh/rsa_id"

RESULT=`pgrep kill_double_typing`
if [ "${RESULT:-null}" = null ]; then
    nohup /Users/sfzhou/.sf_bin/kill_double_typing >/dev/null 2>&1 &!
    echo "Start Kill Double Typing"
fi

# Fasd
fasd_cache="$HOME/.fasd-init-bash"
if [ "$(command -v fasd)" -nt "$fasd_cache" -o ! -s "$fasd_cache" ]; then
  fasd --init posix-alias zsh-hook zsh-ccomp zsh-ccomp-install zsh-wcomp zsh-wcomp-install >| "$fasd_cache"
fi
source "$fasd_cache"
unset fasd_cache

# RamDisk
if ! test -d /t ; then
    diskutil erasevolume HFS+ 'RamDisk' `hdiutil attach -nomount ram://2097152`
    mkdir -p /t/Temp/Blog/public
    mkdir -p /t/Temp/Thesis
fi

# Alias
alias q="exit"
alias c="cd ~"
alias d="cd .. && ll"
alias rd="rm -rf"

alias qr="node /Users/sfzhou/Work/Front.End/Learning.Node.js/1.Tools/3.qr.code.generator"

alias gp="git pull"
alias gd="git diff"
alias gs="git status"
alias gco="git checkout"
alias gpm="git push"
alias gc="git add --all && git commit -m"

alias python="python -B"
alias python3="python3 -B"
